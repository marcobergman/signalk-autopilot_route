{
  "name": "signalk-autopilot_route",
  "version": "1.1.0",
  "description": "Plugin that creates 'smooth' APB messages for Pyilot based on the Route Position Bearing algorithm",
  "main": "index.js",
  "scripts": {
    "test": "$NODE $npm_package_main",
    "create-release": "github-create-release --owner marcobergman --repository signalk-autopilot_route",
    "release": "git tag -d v$npm_package_version; git tag v$npm_package_version && git push --tags && git push && npm run create-release",
    "prettier": "prettier -w index.js",
    "lint": "eslint -c .eslintrc.js --ext .ts --ext .js --fix index.js",
    "format": "npm run prettier && npm run lint"
  },
  "keywords": [
    "signalk-node-server-plugin",
    "signalk-webapp"
  ],
  "signalk-plugin-enabled-by-default": false,
  "signalk": {
    "appIcon": "images/autopilot_route.png",
    "displayName": "Autopilot Route Follower"
  },
  "author": {
    "name": "Marco Bergman",
    "email": "marcobergman@gmail.com"
  },
  "license": "ISC",
  "dependencies": {
    "baconjs": "^0.7.88",
    "complex.js": "^2.4.2",
    "fast-csv": "^5.0.2",
    "geolib": "^3.3.3",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "@signalk/github-create-release": "^1.0.1",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-react": "^7.31.8",
    "prettier": "^2.7.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcobergman/signalk-autopilot_route"
  }
}
